<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calendar_gradient_background"
    tools:context=".CalendarActivity">

    <ImageButton
        android:id="@+id/btnCalendarBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/tvCalendarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Agenda Semanal"
        android:textColor="@android:color/white"
        android:shadowColor="#40000000"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnCalendarBack"
        app:layout_constraintStart_toEndOf="@+id/btnCalendarBack"
        app:layout_constraintTop_toTopOf="@+id/btnCalendarBack" />

    <!-- Selector de dÃ­as de la semana -->
    <LinearLayout
        android:id="@+id/layoutDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/btnCalendarBack">

        <com.google.android.material.button.MaterialButton android:id="@+id/btnLu" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginHorizontal="4dp" android:text="L" android:textColor="@color/primary_dark_blue" android:backgroundTint="#B3FFFFFF" app:cornerRadius="16dp" app:strokeWidth="1dp" app:strokeColor="#CCFFFFFF"/>
        <com.google.android.material.button.MaterialButton android:id="@+id/btnMa" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginHorizontal="4dp" android:text="M" android:textColor="@color/primary_dark_blue" android:backgroundTint="#B3FFFFFF" app:cornerRadius="16dp" app:strokeWidth="1dp" app:strokeColor="#CCFFFFFF"/>
        <com.google.android.material.button.MaterialButton android:id="@+id/btnMi" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginHorizontal="4dp" android:text="X" android:textColor="@color/primary_dark_blue" android:backgroundTint="#B3FFFFFF" app:cornerRadius="16dp" app:strokeWidth="1dp" app:strokeColor="#CCFFFFFF"/>
        <com.google.android.material.button.MaterialButton android:id="@+id/btnJu" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginHorizontal="4dp" android:text="J" android:textColor="@color/primary_dark_blue" android:backgroundTint="#B3FFFFFF" app:cornerRadius="16dp" app:strokeWidth="1dp" app:strokeColor="#CCFFFFFF"/>
        <com.google.android.material.button.MaterialButton android:id="@+id/btnVi" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginHorizontal="4dp" android:text="V" android:textColor="@color/primary_dark_blue" android:backgroundTint="#B3FFFFFF" app:cornerRadius="16dp" app:strokeWidth="1dp" app:strokeColor="#CCFFFFFF"/>
        <com.google.android.material.button.MaterialButton android:id="@+id/btnSa" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginHorizontal="4dp" android:text="S" android:textColor="@color/primary_dark_blue" android:backgroundTint="#B3FFFFFF" app:cornerRadius="16dp" app:strokeWidth="1dp" app:strokeColor="#CCFFFFFF"/>
        <com.google.android.material.button.MaterialButton android:id="@+id/btnDo" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginHorizontal="4dp" android:text="D" android:textColor="@color/primary_dark_blue" android:backgroundTint="#B3FFFFFF" app:cornerRadius="16dp" app:strokeWidth="1dp" app:strokeColor="#CCFFFFFF"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelectedDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomas para hoy"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutDays" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDaySchedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectedDay" />

</androidx.constraintlayout.widget.ConstraintLayout>