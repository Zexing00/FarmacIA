<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvMedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Medicamento"
            android:textColor="@color/primary_dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMedProspect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Prospecto..."
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnVerProspectoPDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Prospecto (PDF)"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/accent_yellow"
            style="@style/Widget.MaterialComponents.Button"
            android:visibility="gone"/>

        <!-- BotÃ³n simplificado y con nuevo estilo -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResumenInteligente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Resumen"
            android:backgroundTint="@color/accent_green"
            app:cornerRadius="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#EEEEEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/tvMedDosis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dosis: No definida"
                android:textColor="@color/secondary_blue"
                android:textSize="13sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/tvMedCaducidad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Caducidad: --/--"
                android:textColor="@color/error_red"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>