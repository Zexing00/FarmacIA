<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="1.5dp"
    app:strokeColor="#E6FFFFFF"
    app:cardBackgroundColor="#B3FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvMedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Medicamento"
            android:textColor="@color/primary_dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <TextView
            android:id="@+id/tvMedDosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosis: No definida"
            android:textColor="@color/primary_dark_blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMedCaducidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Caducidad: --/--"
            android:textColor="@color/primary_dark_blue"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4DFFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerProspecto"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prospecto"
                android:textColor="@color/primary_dark_blue"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_agenda"
                app:iconTint="@color/primary_dark_blue"
                app:iconPadding="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResumenInteligente"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="163dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:text="Resumen IA"
                android:textColor="@color/primary_dark_blue"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_help"
                app:iconPadding="4dp"
                app:iconTint="@color/primary_dark_blue" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>