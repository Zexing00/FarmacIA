<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/electric_blue_background"
    tools:context=".HomeActivity">

    <!-- Cabecera -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnLogoutIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bienvenido, Usuario" />

    <ImageButton
        android:id="@+id/btnLogoutIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Cerrar Sesión"
        android:src="@android:drawable/ic_lock_power_off"
        app:layout_constraintBottom_toBottomOf="@+id/tvWelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvWelcome"
        app:tint="@color/white" />

    <!-- Botones Principales (Diseño Neumórfico Avanzado) -->
    <LinearLayout
        android:id="@+id/main_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHomeCalendar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/advanced_neumorphic_background"
            android:stateListAnimator="@null"
            android:text="Mi Calendario"
            android:textAllCaps="false"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHomePillbox"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/advanced_neumorphic_background"
            android:stateListAnimator="@null"
            android:text="Pastillero"
            android:textAllCaps="false"
            android:textColor="@color/primary_pink"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHomeSearch"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/advanced_neumorphic_background"
            android:stateListAnimator="@null"
            android:text="Buscador"
            android:textAllCaps="false"
            android:textColor="#FFC107"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>

    <!-- Contenedor de acciones inferiores (Centrado) -->
    <LinearLayout
        android:id="@+id/bottom_actions_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_buttons_layout">

        <!-- Botón IA (Outlined) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHomeIA"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:padding="12dp"
            android:text="Consultar IA"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            app:strokeColor="@color/white" />

        <!-- Caja de Gestión -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/management_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#99FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Gestión de Pacientes/Cuidadores"
                    android:textColor="@color/primary_dark_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHomeManageCaregivers"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Gestionar Acceso de Cuidadores" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHomeManagePatients"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver Pastilleros de Pacientes" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>