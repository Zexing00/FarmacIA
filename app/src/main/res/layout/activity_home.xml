<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_background"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:shadowColor="#40000000"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:text="Bienvenido"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Botones con efecto Liquid Glass -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalendar"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="#99FFFFFF" 
                android:text="Mi Calendario"
                android:textAllCaps="false"
                android:textColor="@color/primary_dark_blue"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                app:strokeColor="#B3FFFFFF"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWelcome"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPillbox"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#99FFB6C1"
                android:text="Mi Pastillero"
                android:textAllCaps="false"
                android:textColor="@color/primary_dark_blue"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                app:strokeColor="#B3FFFFFF"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnCalendar"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMedications"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#99FFEB3B"
                android:text="Buscador"
                android:textAllCaps="false"
                android:textColor="@color/primary_dark_blue"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                app:strokeColor="#B3FFFFFF"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPillbox"/>

            <!-- Botón de IA destacado (no glass) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="@android:color/white"
                android:paddingHorizontal="32dp"
                android:paddingVertical="12dp"
                android:text="Consultar IA"
                android:textAllCaps="false"
                android:textColor="@color/primary_dark_blue"
                android:textSize="16sp"
                app:cornerRadius="24dp"
                app:icon="@android:drawable/ic_menu_help"
                app:iconTint="@color/primary_dark_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnMedications" />

            <!-- Gestión de Cuidadores con efecto Glass -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCuidadores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="#99FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnIA"
                app:strokeColor="#B3FFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Cuidadores y Pacientes"
                        android:textColor="@color/primary_dark_blue"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnShareAccess"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Dar Acceso"
                            android:textAllCaps="false"
                            android:textColor="@color/primary_dark_blue"
                            app:cornerRadius="16dp" />

                        <Button
                            android:id="@+id/btnManagePatients"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Mis Pacientes"
                            android:textAllCaps="false"
                            android:textColor="@color/primary_dark_blue"
                            app:cornerRadius="16dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>