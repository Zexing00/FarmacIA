<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".HomeActivity">
    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_2"
        android:scaleType="centerCrop"
        android:alpha="0.09"
        android:contentDescription="@null" />
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textColor="@color/primary_dark_blue"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPillbox"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="ðŸ’Š Mi Pastillero"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_blue"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

    <Button
        android:id="@+id/btnMedications"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="ðŸ” Buscar Medicamentos"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/primary_dark_blue"
        android:backgroundTint="@color/accent_yellow"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPillbox" />

    <TextView
        android:id="@+id/tvAdminSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GestiÃ³n de Cuidadores"
        android:textColor="@color/primary_dark_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMedications" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_blue"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAdminSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnShareAccess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dar Acceso"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp"
            android:textColor="@color/primary_blue"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnManagePatients"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis Pacientes"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"
            android:textColor="@color/primary_blue"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

    <Button
        android:id="@+id/btnIA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_blue"
        android:text="Consultar IA"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
