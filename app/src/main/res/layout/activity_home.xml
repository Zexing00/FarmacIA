<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Nuevo fondo: fondomenu -->
    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/fondomenu"
        android:scaleType="centerCrop"
        android:alpha="0.25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textColor="@color/primary_dark_blue"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Los "Tres Grandes" con el mismo tamaÃ±o y redondeado -->
            <Button
                android:id="@+id/btnCalendar"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:text="ðŸ“… Mi Calendario"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_blue"
                android:layout_marginTop="32dp"
                app:cornerRadius="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

            <Button
                android:id="@+id/btnPillbox"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:text="ðŸ’Š Mi Pastillero"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/secondary_blue"
                android:layout_marginTop="16dp"
                app:cornerRadius="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnCalendar" />

            <Button
                android:id="@+id/btnMedications"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:text="ðŸ” Buscador"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark_blue"
                android:backgroundTint="@color/accent_yellow"
                android:layout_marginTop="16dp"
                app:cornerRadius="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPillbox" />

            <!-- SecciÃ³n de IA con estilo diferenciado -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ¨ Consultar IA"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:paddingHorizontal="32dp"
                android:paddingVertical="12dp"
                android:backgroundTint="@color/primary_dark_blue"
                android:textColor="@color/white"
                android:layout_marginTop="32dp"
                app:cornerRadius="24dp"
                app:icon="@android:drawable/ic_menu_help"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnMedications" />

            <!-- GestiÃ³n de Cuidadores mÃ¡s sutil -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCuidadores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/divider_color"
                app:cardBackgroundColor="#1A2196F3"
                app:layout_constraintTop_toBottomOf="@+id/btnIA"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuidadores y Pacientes"
                        android:textColor="@color/primary_dark_blue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnShareAccess"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dar Acceso"
                            android:textAllCaps="false"
                            android:layout_marginEnd="8dp"
                            app:cornerRadius="16dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />

                        <Button
                            android:id="@+id/btnManagePatients"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mis Pacientes"
                            android:textAllCaps="false"
                            android:layout_marginStart="8dp"
                            app:cornerRadius="16dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>